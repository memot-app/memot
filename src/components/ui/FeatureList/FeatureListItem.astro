---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"li"> {
  number: number;
  maxNumberLength?: number;
}

const { number, maxNumberLength = 2, class: className, ...props } = Astro.props;

const zeroPaddedNumber = String(number).padStart(maxNumberLength, "0");
---

<li
  class:list={[
    "inline-flex items-center justify-start gap-x-3 md:gap-x-6",
    "outline-2 md:outline-[3px] outline-border-primary rounded-[clamp(1rem,3vw,1.75rem)]",
    "h-auto",
    "px-3 md:px-6 py-4",
    className,
  ]}
  {...props}
>
  <span
    class="font-bold text-text-primary"
    style="font-size: clamp(1.25rem, 4vw, 2.5rem);">{zeroPaddedNumber}</span
  >
  <p
    class="font-bold text-text-primary"
    style="font-size: clamp(1rem, 3vw, 1.5rem);"
  >
    <slot />
  </p>
</li>
