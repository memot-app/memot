---
import type { HTMLAttributes } from "astro/types";
import AppLinkWeb from "../AppLink/AppLinkWeb.astro";
import BrandLogoFull from "../Brand/BrandLogoFull.astro";

interface Props extends HTMLAttributes<"header"> {}

const { class: className, ...props } = Astro.props;
---

<header
  class:list={[
    "flex items-center justify-between",
    "z-10 fixed top-0 inset-x-0 h-header m-[16px] px-[42px] rounded-[32px] bg-bg-primary/50 backdrop-blur-2xl",
    className,
  ]}
  {...props}
>
  <BrandLogoFull class="h-[45px]" />
  <AppLinkWeb class="h-[48px]" />
</header>
