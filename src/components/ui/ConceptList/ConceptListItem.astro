---
// import { Image } from "astro:assets";
// import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";

export type ConceptItem = {
  texts: string[];
};

interface Props extends HTMLAttributes<"div"> {
  item: ConceptItem;
  imagesWrapperClass?: string;
}

const {
  item: { texts },
  imagesWrapperClass,
  class: className,
  ...props
} = Astro.props;
---

<div class:list={["grid grid-cols-2 gap-x-10", className]} {...props}>
  <div class:list={["flex flex-col items-center", imagesWrapperClass]}>
    <slot />
  </div>
  <div class="grid place-content-center">
    <span class="text-5xl font-extrabold leading-normal text-center">
      {texts.map((line) => <p>{line}</p>)}
    </span>
  </div>
</div>
