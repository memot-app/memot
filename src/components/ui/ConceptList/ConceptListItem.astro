---
// import { Image } from "astro:assets";
// import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";

export type ConceptItem = {
  texts: string[];
};

interface Props extends HTMLAttributes<"div"> {
  item: ConceptItem;
  imagesWrapperClass?: string;
}

const {
  item: { texts },
  imagesWrapperClass,
  class: className,
  ...props
} = Astro.props;
---

<div
  class:list={[
    "grid grid-cols-1 lg:grid-cols-2 gap-x-10 gap-y-8",
    className,
  ]}
  {...props}
>
  <div
    class:list={[
      "flex flex-wrap items-center justify-center",
      imagesWrapperClass,
    ]}
  >
    <slot />
  </div>
  <div class="grid place-content-center">
    <span
      class="text-2xl md:text-3xl lg:text-4xl font-extrabold leading-normal text-center"
    >
      {texts.map((line) => <p>{line}</p>)}
    </span>
  </div>
</div>
