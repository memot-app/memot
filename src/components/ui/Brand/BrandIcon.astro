---
import { Image } from "astro:assets";
import type { ComponentProps } from "astro/types";
import MemotIconColor from "~/assets/memot-icon-color.svg";
import { SITE } from "~/constants/metadata";
import Link from "../Link/Link.astro";

interface Props extends ComponentProps<typeof Link> {}

const { class: className, ...props } = Astro.props;
---

<Link
  href={SITE.appUrl.web}
  class:list={["hover:opacity-80 transition", className]}
  {...props}
>
  <Image
    class="size-full"
    src={MemotIconColor}
    alt="めもっとのアイコン。にっこりと微笑む薄緑色のスライムのようなキャラクターが描かれています。"
    inferSize
  />
</Link>
