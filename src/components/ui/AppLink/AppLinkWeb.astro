---
import type { ComponentProps } from "astro/types";
import { SITE } from "~/constants/metadata";
import Link from "../Link/Link.astro";

interface Props extends ComponentProps<typeof Link> {}

const { class: className, ...props } = Astro.props;
---

<Link
  href={SITE.appUrl.web}
  class:list={[
    "group relative inline-flex items-center justify-center rounded-full bg-theme px-4 py-4 text-base md:px-8 md:text-xl font-bold text-white transition-all duration-200 ease-in-out border-b-4 border-green-700 hover:translate-y-1 hover:border-b-0",
    className,
  ]}
  {...props}
>
  <span>2025年リリース予定</span>
</Link>
