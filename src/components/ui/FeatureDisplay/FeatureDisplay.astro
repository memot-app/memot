---
import type { PolymorphicProps } from "~/types";

export type Slot = "left" | "right" | "left-title" | "left-video" | "left-description" | "right-title" | "right-video" | "right-description";

interface CustomProps {
  /**
   * 左側の要素を上にオフセットするか
   */
  leftOffset?: boolean;
}

type Props = PolymorphicProps<"div", CustomProps>;

const { as: Tag = "div", leftOffset = false, class: className, ...props } = Astro.props;
---

<Tag
  class:list={[
    "flex flex-col md:flex-row items-center md:items-start justify-center gap-8 md:gap-0",
    className,
  ]}
  {...props}
>
  <!-- 左側のコンテンツ -->
  <div class:list={["flex-1 flex flex-col gap-6", leftOffset && "md:-mt-8"]}>
    <slot name="left-title" />
    <slot name="left-video" />
    <slot name="left-description" />
  </div>
  
  <!-- 右側のコンテンツ -->
  <div class:list={["flex-1 flex flex-col gap-6", !leftOffset && "md:-mt-8"]}>
    <slot name="right-title" />
    <slot name="right-video" />
    <slot name="right-description" />
  </div>
</Tag>
