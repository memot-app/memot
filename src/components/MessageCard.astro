--- 
export interface Props {
  message: string;
  rotateX?: number;
  rotateY?: number;
  rotateZ?: number;
  shadowDirection?: "bottom-left" | "bottom-right";
  class?: string;
}

const {
  message,
  rotateX = 0,
  rotateY = 0,
  rotateZ = 0,
  shadowDirection = "bottom-left",
  class: className = "",
} = Astro.props;

const shadowClass =
  shadowDirection === "bottom-left"
    ? "shadow-[-5px_5px_0_0_#404040]"
    : "shadow-[5px_5px_0_0_#404040]";
---

<div
  class={`inline-block px-4 py-3 bg-white border-[2.304px] border-black ${shadowClass} max-w-[200px] ${className}`}
  style={`
    border-radius: 2.88px 17.282px 17.282px 17.282px;
    transform: rotateX(${rotateX}deg) rotateY(${rotateY}deg) rotateZ(${rotateZ}deg);
    transform-style: preserve-3d;
  `}
>
  <span class="text-black font-medium text-sm leading-tight break-words block">
    {message}
  </span>
</div>
