---
export interface Props {
  message: string;
  rotateX?: number;
  rotateY?: number;
  rotateZ?: number;
  class?: string;
}

const { 
  message, 
  rotateX = 0, 
  rotateY = 0, 
  rotateZ = 0, 
  class: className = "" 
} = Astro.props;
---

<div 
  class={`inline-flex justify-center items-center px-[17.282px] py-[11.522px] bg-white border-[2.304px] border-black shadow-[-5px_5px_0_0_#404040] ${className}`}
  style={`
    border-radius: 2.88px 17.282px 17.282px 17.282px;
    transform: rotateX(${rotateX}deg) rotateY(${rotateY}deg) rotateZ(${rotateZ}deg);
    transform-style: preserve-3d;
    gap: 5.761px;
  `}
>
  <span class="text-black font-medium text-sm leading-tight">
    {message}
  </span>
</div>