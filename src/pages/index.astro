---
import { Image } from "astro:assets";
import CalendarFri from "~/assets/calendar-fri.svg";
import CalendarMon from "~/assets/calendar-mon.svg";
import CalendarSat from "~/assets/calendar-sat.svg";
import CalendarSun from "~/assets/calendar-sun.svg";
import CalendarThu from "~/assets/calendar-thu.svg";
import CalendarTue from "~/assets/calendar-tue.svg";
import CalendarWed from "~/assets/calendar-wed.svg";
import NoteLocked from "~/assets/note-locked.svg";
import Screen1_1 from "~/assets/screen1-1.png";
import Screen1_2 from "~/assets/screen1-2.png";
import Screen2_1 from "~/assets/screen2-1.png";
import Screen2_2 from "~/assets/screen2-2.png";
import Screen3 from "~/assets/screen3.png";
import Screen4_1 from "~/assets/screen4-1.png";
import Screen4_1_msg1 from "~/assets/screen4-1-msg1.png";
import Screen4_1_msg2 from "~/assets/screen4-1-msg2.png";
import Screen4_2 from "~/assets/screen4-2.png";
import Screen4_2_msg1 from "~/assets/screen4-2-msg1.png";
import Screen4_2_msg2 from "~/assets/screen4-2-msg2.png";
import StrikeThroughDM from "~/assets/strikethrough-dm.svg";
import StrikeThroughLike from "~/assets/strikethrough-like.svg";
import StrikeThroughReply from "~/assets/strikethrough-reply.svg";
import StrikeThroughRepost from "~/assets/strikethrough-repost.svg";
import MessageCard from "~/components/MessageCard.astro";
import AppLinkAppStore from "~/components/ui/AppLink/AppLinkAppStore.astro";
import AppLinkGooglePlay from "~/components/ui/AppLink/AppLinkGooglePlay.astro";
import AppLinkWeb from "~/components/ui/AppLink/AppLinkWeb.astro";
import BrandIcon from "~/components/ui/Brand/BrandIcon.astro";
import ConceptList from "~/components/ui/ConceptList/ConceptList.astro";
import ConceptListItem from "~/components/ui/ConceptList/ConceptListItem.astro";
import RoundCornerContainer from "~/components/ui/Container/RoundCornerContainer.astro";
import FeatureDisplay from "~/components/ui/FeatureDisplay/FeatureDisplay.astro";
import FeatureDisplayImage from "~/components/ui/FeatureDisplay/FeatureDisplayImage.astro";
import FeatureDisplayText from "~/components/ui/FeatureDisplay/FeatureDisplayText.astro";
import FeatureList from "~/components/ui/FeatureList/FeatureList.astro";
import FeatureListItem from "~/components/ui/FeatureList/FeatureListItem.astro";
import Footer from "~/components/ui/Footer/Footer.astro";
import Header from "~/components/ui/Header/Header.astro";
import HeaderBackground from "~/components/ui/Header/HeaderBackground.astro";
import RootLayout from "~/layouts/RootLayout.astro";
---

<RootLayout>
  <!-- ヘッダー -->
  <HeaderBackground />
  <Header />

  <!-- メインコンテンツ -->
  <main class="min-h-screen bg-bg-secondary">
    <!-- ヒーローセクション -->
    <section class="bg-bg-primary pt-16 pb-24 md:pt-24 md:pb-32">
      <div
        class="mx-auto max-w-screen-xl w-full flex flex-col justify-between gap-y-16 md:gap-y-20 px-4"
      >
        <h1 class="text-hero text-text-primary text-center">
          <p>みんなの日常。</p>
          <p>わたしの独り言。</p>
        </h1>
        <div
          class="grid grid-cols-2 md:flex md:flex-row items-center justify-center gap-y-4 md:gap-y-0 md:gap-x-clamp(0.5rem,3vw,2.5rem)"
        >
          <!-- 左上: 投稿画面 -->
          <div
            class="col-start-1 row-start-1 flex justify-center items-center md:w-auto"
          >
            <Image
              class="w-[clamp(140px,40vw,200px)] md:w-[clamp(100px,28vw,360px)]"
              src={Screen1_1}
              width={Screen1_1.width}
              height={Screen1_1.height}
              alt="アプリの投稿画面"
            />
          </div>

          <!-- 右上: メッセージ -->
          <div
            class="col-start-2 row-start-1 flex items-center w-full md:w-auto"
          >
            <div
              class="w-full md:w-[clamp(120px,34vw,400px)] justify-self-center flex flex-col items-start gap-2 md:gap-4 text-[clamp(0.75rem,1.8vw,1rem)] z-10"
            >
              <MessageCard
                message="久しぶりに新宿に行った"
                rotateX={25}
                rotateY={30}
                rotateZ={-5}
              />
              <MessageCard
                message="新宿のカフェでリラックス"
                rotateX={25}
                rotateY={30}
                rotateZ={-5}
              />
              <MessageCard
                message="この季節はうどんを食べたくなる"
                rotateX={25}
                rotateY={30}
                rotateZ={-5}
              />
              <MessageCard
                message="この季節はうどんを食べたくなるな。おいしい店ないかな"
                rotateX={25}
                rotateY={30}
                rotateZ={-5}
              />
            </div>
          </div>

          <!-- 右下: おすすめ画面 -->
          <div
            class="col-start-2 row-start-2 flex justify-center items-center -mt-16 md:mt-0 md:w-auto"
          >
            <Image
              class="w-[clamp(140px,40vw,200px)] md:w-[clamp(100px,28vw,360px)]"
              src={Screen1_2}
              width={Screen1_2.width}
              height={Screen1_2.height}
              alt="アプリのおすすめ画面"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- イントロダクションセクション -->
    <section
      class="bg-bg-secondary py-24 px-4 grid place-content-center gap-y-16"
    >
      <div class="mx-auto max-w-3xl w-full grid content-between gap-y-12">
        <h2 class="text-intro text-text-secondary text-center">
          <p>期待を生むのではなく</p>
          <p>ありのままの自分を届ける。</p>
        </h2>
        <!-- 画像ギャラリー -->
        <div
          class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-clamp(2rem,8vw,5rem)"
        >
          <Image
            class="w-[clamp(240px,70vw,280px)]"
            src={Screen2_1}
            width={Screen2_1.width}
            height={Screen2_1.height}
            alt="アプリの日記画面"
          />
          <Image
            class="w-[clamp(240px,70vw,280px)]"
            src={Screen2_2}
            width={Screen2_2.width}
            height={Screen2_2.height}
            alt="アプリのユーザー設定画面"
          />
        </div>
      </div>
      <!-- 特徴 -->
      <div class="w-full max-w-4xl mx-auto grid gap-y-6">
        <h3
          class="text-intro text-[clamp(1.5rem,5vw,2rem)] text-text-secondary text-center"
        >
          めもっとの特徴は？
        </h3>
        <!-- 3つの特徴 -->
        <FeatureList>
          <FeatureListItem number={1}>疲れないSNS</FeatureListItem>
          <FeatureListItem number={2}>日常を静かに共有</FeatureListItem>
          <FeatureListItem number={3}>日記で毎日を振り返る</FeatureListItem>
        </FeatureList>
      </div>
    </section>

    <!-- コンセプトセクション -->
    <RoundCornerContainer
      class="bg-theme text-white py-16 md:py-24 px-4 grid gap-y-12"
    >
      <div class="max-w-4xl mx-auto">
        <h2 class="text-concept text-center py-4">しずかで疲れない空間</h2>
        <p class="text-concept-sub text-center max-w-prose mx-auto">
          他人の評価に縛られず、“今”をメモできる場所。気軽に、気ままに、自分のためのメモをどうぞ。
        </p>
      </div>
      <!-- コンセプト枠 -->
      <ConceptList class="mx-auto max-w-screen-xl w-full">
        <!-- 1 -->
        <ConceptListItem
          item={{ texts: ["期待を生むことなく", "静かに共有。"] }}
        >
          <Image
            class="self-start w-[clamp(100px,30vw,200px)]"
            src={StrikeThroughDM}
            width={StrikeThroughDM.width}
            height={StrikeThroughDM.height}
            alt="DMに打ち消し線"
          />
          <Image
            class="self-end w-[clamp(100px,30vw,200px)]"
            src={StrikeThroughReply}
            width={StrikeThroughReply.width}
            height={StrikeThroughReply.height}
            alt="リプライに打ち消し線"
          />
          <Image
            class="self-start w-[clamp(100px,30vw,200px)]"
            src={StrikeThroughRepost}
            width={StrikeThroughRepost.width}
            height={StrikeThroughRepost.height}
            alt="リポストに打ち消し線"
          />
          <Image
            class="self-end w-[clamp(100px,30vw,200px)]"
            src={StrikeThroughLike}
            width={StrikeThroughLike.width}
            height={StrikeThroughLike.height}
            alt="いいねに打ち消し線"
          />
        </ConceptListItem>
        <!-- 2 -->
        <ConceptListItem
          item={{ texts: ["残るのは1週間だけ。", "過去のことは気にしない。"] }}
          imagesWrapperClass="gap-y-6"
        >
          <div class="flex items-center justify-center gap-x-clamp(0.5rem,3vw,1.25rem)">
            <Image
              class="w-full"
              src={CalendarMon}
              width={CalendarMon.width}
              height={CalendarMon.height}
              alt="カレンダー月曜日"
            />
            <Image
              class="w-full"
              src={CalendarTue}
              width={CalendarTue.width}
              height={CalendarTue.height}
              alt="カレンダー火曜日"
            />
            <Image
              class="w-full"
              src={CalendarWed}
              width={CalendarWed.width}
              height={CalendarWed.height}
              alt="カレンダー水曜日"
            />
          </div>
          <div class="flex items-center justify-center gap-x-clamp(0.5rem,3vw,1.25rem)">
            <Image
              class="w-full"
              src={CalendarThu}
              width={CalendarThu.width}
              height={CalendarThu.height}
              alt="カレンダー木曜日"
            />
            <Image
              class="w-full"
              src={CalendarFri}
              width={CalendarFri.width}
              height={CalendarFri.height}
              alt="カレンダー金曜日"
            />
            <Image
              class="w-full"
              src={CalendarSat}
              width={CalendarSat.width}
              height={CalendarSat.height}
              alt="カレンダー土曜日"
            />
            <Image
              class="w-full"
              src={CalendarSun}
              width={CalendarSun.width}
              height={CalendarSun.height}
              alt="カレンダー日曜日"
            />
          </div>
        </ConceptListItem>
        <!-- 3 -->
        <ConceptListItem
          item={{ texts: ["自分だけが見える", "めもアプリとしても。"] }}
        >
          <Image
            class="w-[clamp(160px,50vw,240px)]"
            src={NoteLocked}
            width={NoteLocked.width}
            height={NoteLocked.height}
            alt="ロックされたノート"
          />
        </ConceptListItem>
      </ConceptList>
    </RoundCornerContainer>

    <!-- アイキャッチ/バンパーセクション -->
    <section
      class="relative mx-auto max-w-screen-xl w-full flex flex-col-reverse lg:flex-row justify-center items-center py-24 px-4 gap-y-8"
    >
      <h3 class="text-bumper text-text-tertiary text-center lg:text-start">
        <p>独り言。</p>
        <p>買い物のメモ。</p>
        <p>趣味のこと。</p>
        <p>気軽にめもして共有。</p>
      </h3>
      <Image
        class="w-[clamp(320px,90vw,600px)]"
        src={Screen3}
        width={Screen3.width}
        height={Screen3.height}
        alt="アプリの日記画面"
      />
    </section>

    <!-- フィーチャーセクション -->
    <section
      class="rounded-t-[60px] md:rounded-t-[100px] shadow-theme-glow py-24 md:py-32 px-4 grid gap-y-20 md:gap-y-28"
    >
      <h2 class="text-feature text-center">
        <span
          class="text-transparent bg-clip-text bg-linear-to-r from-theme-gradient to-theme"
          >AIがつながる新たな体験</span
        >
      </h2>
      <div class="grid gap-y-20 md:gap-y-40">
        <!-- 1 -->
        <FeatureDisplay class="mx-auto max-w-screen-xl w-full">
          <FeatureDisplayText
            slot="left"
            head="自動日記"
            headSub="〜自分から自分へ〜"
            body={[
              "返信やDM機能を設けず、純粋に",
              "自分の日常を記録・共有する独り言として",
              "利用でき、余計なストレスを軽減します。",
            ]}
          />
          <FeatureDisplayImage
            slot="right"
            messageImages={[
              {
                ...Screen4_1_msg1,
                alt: "投稿「今日久しぶりに新宿にきた」",
              },
              {
                ...Screen4_1_msg2,
                alt: "投稿「この季節はうどんを食べたくなるな。おいしい店ないかな」",
              },
            ]}
            displayImage={{
              ...Screen4_1,
              alt: "アプリの自動日記画面",
            }}
          />
        </FeatureDisplay>
        <!-- 2 -->
        <FeatureDisplay class="mx-auto max-w-screen-xl w-full">
          <FeatureDisplayText
            slot="right"
            head="感情レター"
            headSub="〜自分から他人へ〜"
            body={[
              "返信やDM機能を設けず、純粋に",
              "自分の日常を記録・共有する独り言として",
              "利用でき、余計なストレスを軽減します。",
            ]}
          />
          <FeatureDisplayImage
            slot="left"
            messageImages={[
              {
                ...Screen4_2_msg1,
                alt: "投稿「今日久しぶりに新宿にきた」",
              },
              {
                ...Screen4_2_msg2,
                alt: "投稿「この季節はうどんを食べたくなるな。おいしい店ないかな」",
              },
            ]}
            displayImage={{
              ...Screen4_2,
              alt: "アプリの感情レターを送る画面",
            }}
          />
        </FeatureDisplay>
      </div>
    </section>

    <!-- クロージングセクション -->
    <section class="bg-bg-secondary font-zen-kaku-gothic-new py-24 md:py-36 px-4">
      <div class="mx-auto max-w-screen-lg w-full grid gap-y-24">
        <div
          class="flex flex-col md:flex-row items-center justify-center gap-x-16 gap-y-8"
        >
          <h2 class="text-closing text-text-primary text-center md:text-start">
            <p>儚い”めも”から。</p>
            <p>
              “もっと”<span
                class="text-[clamp(2.5rem,10vw,4.75rem)] text-theme"
                >自分らしさ</span
              >を。
            </p>
          </h2>
          <BrandIcon class="h-[clamp(100px,25vw,165px)]" />
        </div>
        <!-- アプリのリンク -->
        <div class="grid gap-y-8">
          <div
            class="flex flex-col md:flex-row items-center justify-center md:justify-between gap-y-6"
          >
            <div class="flex items-center gap-x-clamp(1rem,5vw,2.25rem)">
              <AppLinkAppStore class="h-clamp(4rem,15vw,5.5rem)" />
              <AppLinkGooglePlay class="h-clamp(4rem,15vw,5.5rem)" />
            </div>
            <AppLinkWeb class="h-clamp(5rem,18vw,6rem)" />
          </div>
          <small
            class="text-base md:text-xl text-text-tertiary font-bold text-center md:text-left"
            >※iOS・Android・Webで提供予定。</small
          >
        </div>
      </div>
    </section>
  </main>

  <!-- フッター -->
  <Footer />
</RootLayout>
