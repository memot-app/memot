<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  if (typeof window !== "undefined") {
    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
      // FeatureDisplay animation
      const featureSections = document.querySelectorAll(
        ".feature-display-section"
      );
      featureSections.forEach((section) => {
        gsap.from(section, {
          opacity: 0,
          y: 100,
          duration: 0.7,
          ease: "power3.out",
          scrollTrigger: {
            trigger: section as HTMLElement,
            start: "top 45%",
            toggleActions: "play none none none",
          },
        });
      });

      // MessageCard animation - æŠ•ç¨¿é¢¨ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
      const leftContainer = document.querySelector("#message-card-container");
      const rightContainer = document.querySelector(
        "#message-card-container-right"
      );

      // ãƒ†ã‚­ã‚¹ãƒˆã®ãƒªãƒƒãƒãƒ•ã‚§ãƒ¼ãƒ‰ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³ï¼ˆé«˜ãƒ‘ãƒ•ã‚©ãƒ¼ãƒãƒ³ã‚¹ï¼‰
      function startTextAnimation() {
        const cards = document.querySelectorAll(
          '[data-enable-text-animation="true"]'
        );

        const reducedMotion =
          typeof window !== "undefined" &&
          window.matchMedia &&
          window.matchMedia("(prefers-reduced-motion: reduce)").matches;

        cards.forEach((card) => {
          const textElement = card.querySelector(
            ".message-text"
          ) as HTMLElement;

          if (!textElement) return;

          // åˆæœŸã‚¹ã‚¿ã‚¤ãƒ«ï¼ˆGPUãƒ•ãƒ¬ãƒ³ãƒ‰ãƒªãƒ¼ï¼‰
          textElement.style.willChange = "opacity, transform, filter";
          textElement.style.opacity = "0";
          textElement.style.color = "black";

          if (reducedMotion) {
            // ä½ãƒ¢ãƒ¼ã‚·ãƒ§ãƒ³ç’°å¢ƒã§ã¯ã‚·ãƒ³ãƒ—ãƒ«ã«ãƒ•ã‚§ãƒ¼ãƒ‰ã®ã¿
            gsap.to(textElement, {
              opacity: 1,
              duration: 0.4,
              ease: "power1.out",
              clearProps: "willChange",
            });
            return;
          }

          // ãƒªãƒƒãƒãªãƒ•ã‚§ãƒ¼ãƒ‰ï¼ˆã‚ãšã‹ãªæŒã¡ä¸ŠãŒã‚Š + ãƒ–ãƒ©ãƒ¼è§£é™¤ï¼‰
          gsap.fromTo(
            textElement,
            { opacity: 0, y: 8, filter: "blur(10px)" },
            {
              opacity: 1,
              y: 0,
              filter: "blur(0px)",
              duration: 0.7,
              ease: "power2.out",
              delay: 0.05,
              clearProps: "willChange,filter,transform",
            }
          );
        });
      }

      if (leftContainer && rightContainer) {
        const leftCards = leftContainer.querySelectorAll(".message-card");
        const rightCards = rightContainer.querySelectorAll(".message-card");

        // åˆæœŸçŠ¶æ…‹ã§ä¸¡æ–¹ã‚’éè¡¨ç¤ºã«è¨­å®š
        gsap.set(leftCards, { opacity: 0, scale: 0.8, y: 20 });
        gsap.set(rightCards, { opacity: 0, scale: 0.9, x: 30 });

        // å·¦å´ã®ã‚«ãƒ¼ãƒ‰ã®ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³ï¼ˆä¸€ã¤ãšã¤æŠ•ç¨¿ã•ã‚Œã‚‹ã‚ˆã†ã«ï¼‰
        if (leftCards.length > 0) {
          ScrollTrigger.create({
            trigger: leftContainer as HTMLElement,
            start: "top 80%",
            onEnter: () => {
              gsap.to(leftCards, {
                opacity: 1,
                scale: 1,
                y: 0,
                duration: 0.45,
                ease: "back.out(1.7)",
                stagger: 0.55, // ä½“æ„Ÿé€Ÿåº¦ã‚¢ãƒƒãƒ—
                onComplete: () => {
                  // å·¦å´å®Œäº†å¾Œã«å³å´ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³é–‹å§‹
                  if (rightCards.length > 0) {
                    gsap.to(rightCards, {
                      opacity: 1,
                      scale: 1,
                      x: 0,
                      duration: 0.8,
                      ease: "power2.out",
                      delay: 0.25, // é–“éš”ã‚’çŸ­ç¸®
                      onComplete: () => {
                        // å³å´ã®ã‚«ãƒ¼ãƒ‰è¡¨ç¤ºå®Œäº†å¾Œã€ãƒ†ã‚­ã‚¹ãƒˆã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³é–‹å§‹
                        startTextAnimation();
                      },
                    });
                  }
                },
              });
            },
            toggleActions: "play none none none",
          });
        }
      }
    });
  }
</script>
